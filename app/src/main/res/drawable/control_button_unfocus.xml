<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape  xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <size android:height="44dp" android:width="44dp" />
            <gradient
                android:angle="135"
                android:endColor="@color/light_blue_200"
                android:endX="33"
                android:endY="22"
                android:startColor="@color/blue_200"
                android:startX="11"
                android:startY="22"
                android:type="linear" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:bottom="1dp" android:right="1dp" android:left="1dp" android:top="1dp">
        <shape
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shape="rectangle">
            <size
                android:width="44dp"
                android:height="44dp" />
            <gradient
                android:angle="135"
                android:endColor="@color/light_blue_400"
                android:endX="33"
                android:endY="22"
                android:startColor="@color/blue_400"
                android:startX="11"
                android:startY="22"
                android:type="linear" />
            <corners android:radius="10dp" />
            <padding android:top="2dp"
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"/>
        </shape>
    </item>
</layer-list>



